<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :name%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div>

        
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
          <br>
          <%= f.radio_button :genre_id, 2 %>教師
          <%= f.radio_button :genre_id, 3 %>生徒
          <br>
          <%= f.radio_button :grade_id, 2 %>1年
          <%= f.radio_button :grade_id, 3 %>2年
          <%= f.radio_button :grade_id, 4 %>3年
          <br>
          <%= f.radio_button :class_number_id, 3 %>1組
          <%= f.radio_button :class_number_id, 4 %>2組
          <%= f.radio_button :class_number_id, 5 %>3組
          <%= f.radio_button :class_number_id, 6 %>4組
          <%= f.radio_button :class_number_id, 7 %>5組
          <%= f.radio_button :class_number_id, 8 %>6組

        <div class='field'>
          <div class='field-label'>
            <%= f.label :number_id %>
          </div>
          <div class='field-input'>
            <%= f.text_field :number_id %>
          </div>
        </div>
        </div>

    <%# 商品の詳細 %>
    <%# <div class="users-detail"> %>

      <%# <div class="form"> %>

        <%# <div class="weight-bold-text">ユーザータイプ</div>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"user-genre"}) %> 
                
        <%# <div class="weight-bold-text">学年</div>
          <%= f.collection_select(:grade_id, Grade.all, :id, :name, {}, {class:"select-box", id:"user-grade-status"}) %> 
        
        <%# <div class="weight-bold-text">組</div>
          <%= f.collection_select(:class_number_id, ClassNumber.all, :id, :name, {}, {class:"select-box", id:"class-number-status"}) %>

        <%# <div class="weight-bold-text">学年</div>
          <%= f.collection_select(:number_id, Number.all, :id, :name, {}, {class:"select-box", id:"user-number-status"}) %>

      <%# </div> %>

    <%# </div> %>
    <%# /商品の詳細 %>



        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
