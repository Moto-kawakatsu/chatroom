<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :name%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>

    <%# 商品の詳細 %>
    <div class="items-detail">
      <div class="weight-bold-text">ユーザーの詳細</div>
      <div class="form">

        <div class="weight-bold-text">
          ユーザータイプ
          <span class="indispensable">必須</span>
        </div>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"user-genre"}) %>
        
        <div class="weight-bold-text">
          学年
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:grade_id, Grade.all, :id, :name, {}, {class:"select-box", id:"user-grade-status"}) %>

        <div class="weight-bold-text">
          組
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:class_number_id, ClassNumber.all, :id, :name, {}, {class:"select-box", id:"class-number-status"}) %>

        <div class="weight-bold-text">
          学年
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:number_id, Number.all, :id, :name, {}, {class:"select-box", id:"user-number-status"}) %>

      </div>
    </div>
    <%# /商品の詳細 %>


        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
